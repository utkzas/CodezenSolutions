int APSUM(int arr[], int len)
{  int S;
    S=(len/2)*((2*arr[0])+(len-1));
    return S;
}

bool containsConsecutiveNumbers(int arr[], int len){
	int sum;
    for (int i=0;i<len;i++)
    {
       sum=sum+arr[i]; 
    }
    if(APSUM(arr,len)==sum)
    {
      return 1;
    }
    
      else 
      return 0;

}
